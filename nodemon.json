{
    "restartable": "rs",
    "ignore": [".git", "node_modules/**/node_modules"],
    "verbose": true,
    "execMap": {
        "ts": "node --max-old-space-size=6000 --require ts-node/register"
    },
    "watch": ["*"],
    "env": {
        "NODE_ENV": "development"
    },
    "ext": "js,json,ts"
}